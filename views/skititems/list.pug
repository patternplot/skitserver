extends ../base.pug

block content
  h3 Content Items

  a(href="/skititems/add", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add skititem

  each skititem in skititems
    .media
      a(href=`/skititems/${skititem.id}`)
        .media-left
            img(src=skititem.imageUrl || "http://placekitten.com/g/128/192")
        .media-body
          h4= skititem.title
          p= skititem.author

  if !skititems.length
    p No skititems found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) More
